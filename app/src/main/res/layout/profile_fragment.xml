<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transWhite"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/themeColor"
            android:gravity="center_horizontal"
            android:layout_height="250dp">
            <RelativeLayout
                android:layout_width="150dp"
                android:paddingTop="20dp"
                android:orientation="horizontal"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="150dp"
                    android:src="@drawable/account_circle"
                    android:tint="@color/White"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="150dp">
                </ImageView>
                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/edit_ptofile_pic"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/pencil_circle"
                    android:layout_height="40dp">

                </ImageView>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-50dp"
            android:padding="20dp"
            android:background="@drawable/rounded_corner_btn"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/grease_pencil"
                android:layout_gravity="end"
                android:id="@+id/edit_details"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
            </ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Name"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tejaswini"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Email ID"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="nteju37@gmail.com"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Phone Number"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="98765456"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:id="@+id/manage_address"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Manage Address"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/Goldenrod"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/chevron_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                </ImageView>
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>