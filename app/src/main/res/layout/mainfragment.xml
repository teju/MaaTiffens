<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/White">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/White"
            android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/mainLayoutFragment"
                android:layout_width="0dp"
                android:background="@color/White"
                android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/border1" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


        <View android:id="@+id/border1" android:layout_width="0dp" android:layout_height="1dp" android:background="#22555555"
              app:layout_constraintBottom_toTopOf="@+id/btmNavigation" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
                android:id="@+id/btmNavigation"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                app:elevation="0dp"
                app:itemIconTint="@color/Gray"
                app:itemTextColor="@color/Gray"
                app:menu="@menu/navigation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>