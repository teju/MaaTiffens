<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/soft_transparent_grey"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/White"
        android:layout_height="match_parent">
        <include layout="@layout/header"
            android:visibility="gone"
            android:id="@+id/header">
        </include>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:src="@drawable/logo"
                android:id="@+id/logo"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:layout_height="200dp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/heading"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/playfairdisplay_blackitalic"
                android:textColor="@color/Black"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="Create an account"
                android:layout_height="wrap_content">

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/name"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/account_cowboy_hat"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:hint="Name"
                android:paddingLeft="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corner_btn"
                android:layout_height="50dp">
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/email_id"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/email_outline"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:hint="Email ID"
                android:paddingLeft="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corner_btn"
                android:layout_height="50dp">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/address"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:imeOptions="actionDone"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/account_box_multiple"
                android:inputType="textPostalAddress"
                android:hint="Address"
                android:paddingLeft="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corner_btn"
                android:layout_height="50dp">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/pgone_number"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:imeOptions="actionDone"
                android:drawablePadding="15dp"
                android:visibility="gone"
                android:drawableLeft="@drawable/cellphone_iphone"
                android:inputType="number"
                android:hint="Mobile Number"
                android:paddingLeft="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded_corner_btn"
                android:layout_height="50dp">
            </EditText>

            <Button
                android:layout_width="150dp"
                android:layout_marginTop="25dp"
                android:id="@+id/submit"
                android:text="Submit"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/White"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_corner_edittext"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>